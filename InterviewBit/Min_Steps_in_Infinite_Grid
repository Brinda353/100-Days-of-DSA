public class Solution {
    public int coverPoints(int[] A, int[] B) {
       
       int count=0;
       int n=A.length;
        
        for(int i=0;i<n-1;i++){
            int x = Math.abs(A[i+1]-A[i]); 
            int y = Math.abs(B[i+1]-B[i]);
            
            int step = Math.max(x,y);
            count = count+step;
        }
        return count;
    }
}
